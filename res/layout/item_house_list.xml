<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:descendantFocusability = "blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_light" />

        <TextView
            android:id="@+id/tv_houser"
            style="@style/TextSmallGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_house_status"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:text="房源状态" />

        <TextView
            android:id="@+id/tv_house_state"
            style="@style/TextSmallOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="已交房租" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_gray_light" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_house"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@color/color_gray_dark" 
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:paddingLeft="2dp" >

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextMidBlodBlack"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="上海民航好房子繁花似锦卡和防空军的防守打法饭卡上对方过后就哭" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_second"
                    style="@style/TextMidGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="150dp"
                    android:singleLine="true"
                    android:text="整租 两室两厅 简装" />

                <TextView
                    android:id="@+id/tv_rent"
                    style="@style/TextSmallOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="5500元/月" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_tese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_light" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right|center_vertical"
        android:paddingRight="5dp"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_contact"
            style="@style/TextMidYellow"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/stroke_yellow_round"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="电话沟通" />

        <Button
            android:id="@+id/btn_remind"
            style="@style/TextMidOrange"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/stroke_orange_round"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="提醒交租" />
    </LinearLayout>

</LinearLayout>